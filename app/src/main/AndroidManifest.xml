<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền truy cập Internet (cho API calls tương lai) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ControlRemoteServer"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Màn hình đăng nhập - LAUNCHER -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Màn hình chính (MainCity) - sau khi đăng nhập thành công -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Màn hình điều khiển từ xa -->
        <activity
            android:name=".RemoteControlActivity"
            android:exported="false" />

        <!-- Màn hình xem camera stream -->
        <activity
            android:name=".CameraStreamActivity"
            android:exported="false" />

        <!-- Màn hình bảng điều khiển -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />

    </application>

</manifest>