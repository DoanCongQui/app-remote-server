<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backgrond"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Card View chứa nội dung chính -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="30dp"
            android:gravity="center">

            <!-- Icon/Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÀNH PHỐ CHÍNH"
                android:textAlignment="center"
                android:textColor="@color/blue_background"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chào mừng đến MainCity!\nBạn đã đăng nhập thành công."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="40dp"
                android:lineSpacingExtra="8dp" />

            <!-- Thông tin trạng thái -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái: "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã đăng nhập"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Đăng Xuất"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue_background"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Thông tin thêm -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phiên làm việc của bạn sẽ hết hạn sau 30 phút không hoạt động"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:padding="8dp" />

</LinearLayout>
