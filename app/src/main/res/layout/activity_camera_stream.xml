<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".CameraStreamActivity">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_stream"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue_background"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStreamStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết nối camera..."
        android:textSize="14sp"
        android:textColor="@color/blue_background"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Camera Stream ImageView -->
    <ImageView
        android:id="@+id/ivCameraStream"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@android:color/black"
        android:contentDescription="@string/camera_stream" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Quay Lại"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue_background"
        app:cornerRadius="10dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
